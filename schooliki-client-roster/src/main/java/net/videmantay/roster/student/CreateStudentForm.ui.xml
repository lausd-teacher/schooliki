<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:gwt.material.design.client.ui"
	xmlns:p="urn:import:com.floreysoft.gwt.picker.client.domain"
	xmlns:h="urn:import:gwt.material.design.client.ui.html" >
	<ui:style>
	
	</ui:style>
	<g:HTMLPanel>
	<m:MaterialModal ui:field="modal">
		<m:MaterialModalContent ui:field="modalContent">

			<g:HTMLPanel ui:field="formContainer">
			<m:MaterialRow>
				<m:MaterialColumn>
					<m:MaterialImage ui:field="studentImg" type="CIRCLE"/>
					<m:html.Br/>
					<m:MaterialLabel ui:field="imgUrl" />
				</m:MaterialColumn>
				<m:MaterialColumn>
					<m:MaterialButton ui:field="pickerButton" text="Upload"/>
				</m:MaterialColumn>
			</m:MaterialRow>
				
					<m:MaterialInput ui:field="schoolEmail" required="true" type="EMAIL" placeholder="School email"></m:MaterialInput>
					<h:Label styleName="errorLabel" text="You must include a valid e-mail" textColor="red lighten-1"/>
			
					<m:MaterialInput ui:field="firstName" required="true" type="TEXT" placeholder="First Name"></m:MaterialInput>
					<h:Label styleName="errorLabel" text="You must include a first name" textColor="red lighten-1"/>
				
					<m:MaterialInput ui:field="lastName" required="true" type="TEXT" placeholder="Last Name"></m:MaterialInput>
					<h:Label styleName="errorLabel" text="You must include a last name" textColor="red lighten-1"/>
				
					<m:MaterialInput ui:field="extName" required="false" type="TEXT" placeholder ="Extended Name"></m:MaterialInput>
				
					<m:MaterialDatePicker ui:field="DOB" placeholder="D.O.B"></m:MaterialDatePicker>
					<label id="errorDateOfBirthLabel" class="red-text text-lighten-1">date of birth cannot be empty</label>
				
				</g:HTMLPanel>
		
		</m:MaterialModalContent>
		<m:MaterialFooter>
			<m:MaterialRow>
				<m:MaterialColumn><m:MaterialButton ui:field="okBtn" text="Ok" /></m:MaterialColumn>
				<m:MaterialColumn><m:MaterialButton ui:field="cancelBtn" text="Cancel"/></m:MaterialColumn>
			</m:MaterialRow>
		</m:MaterialFooter>
	</m:MaterialModal>
	</g:HTMLPanel>
</ui:UiBinder> 
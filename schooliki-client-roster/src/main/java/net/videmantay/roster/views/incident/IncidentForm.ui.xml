<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:m="urn:import:gwt.material.design.client.ui">
	<m:MaterialModal ui:field="modal">
		<m:MaterialModalContent>
			<g:HTMLPanel ui:field="formContainer">
				<m:MaterialInput ui:field="iconUrl" type="TEXT"
					visible="false" addStyleNames="valign-wrapper" />
				<m:html.Div>
					<m:MaterialPanel ui:field="iconPanel" m:id="iconFormIconPanel" />
					<m:MaterialIcon iconPosition="RIGHT" iconType="ARROW_DROP_DOWN"
						iconSize="TINY" activates="iconList" addStyleNames="valign bottom" />
				</m:html.Div>
				<m:MaterialDropDown ui:field="dropDown"
					activator="iconList">
				</m:MaterialDropDown>
				<m:MaterialLabel ui:field="nameLabel" text="Name:" />
				<m:MaterialListBox ui:field="nameInput">
				</m:MaterialListBox>
				<m:html.Label styleName="errorLabel" text="You must include a name"
					textColor="red lighten-1" />
				<m:MaterialChip ui:field="valueLabel" text="Points:" />
				<m:MaterialIntegerBox ui:field="valueInput" />
				<m:MaterialLabel text="Type:" />
				<m:MaterialTab>
					<m:MaterialTabItem  waves="GREEN"><m:MaterialAnchorButton type="FLAT" textColor="green darken-1" text="Superb Decision" href="#posIncidentGrid"/></m:MaterialTabItem>
					<m:MaterialTabItem waves="RED"><m:MaterialAnchorButton  type="FLAT" textColor="red darken-1" text="Poor Judgement" href="#negIncidentGrid"/></m:MaterialTabItem>
				</m:MaterialTab>
				<m:MaterialColumn m:id="posIncidentGrid">
	                <m:MaterialContainer ui:field="incidentsTypeContainer">
	                 
	                
	                
	                </m:MaterialContainer>
                </m:MaterialColumn>
                <m:MaterialColumn m:id="negIncidentGrid">
	                <g:Label>No negative incidents for now</g:Label>
                </m:MaterialColumn>
			</g:HTMLPanel>
		</m:MaterialModalContent>
		<m:MaterialModalFooter>
			<m:MaterialRow ui:field="doneCancelRow">
				<m:MaterialColumn>
					<m:MaterialIcon ui:field="doneBtn" iconType="DONE" />
				</m:MaterialColumn>
				<m:MaterialColumn>
					<m:MaterialIcon ui:field="cancelBtn" iconType="CANCEL" />
				</m:MaterialColumn>
			</m:MaterialRow>
		</m:MaterialModalFooter>
	</m:MaterialModal>
</ui:UiBinder> 
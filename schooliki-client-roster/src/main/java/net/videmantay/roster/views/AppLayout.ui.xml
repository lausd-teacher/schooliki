<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:m="urn:import:gwt.material.design.client.ui"
	xmlns:h="urn:import:gwt.material.design.client.ui.html" xmlns:v="urn:import:net.videmantay.roster.views">

	<ui:style>
	.label {
		margin: 24px;
	}
	
	.profile {
		border: 1px solid Crimson;
		padding: 2em;
		font-family: Verdana;
	}
	</ui:style>
	<g:HTMLPanel>
		<header>
			<!-- NavBar -->
			<m:MaterialNavBar ui:field="navBar" activates="sideNav"
				backgroundColor="red darken-4">
				
			</m:MaterialNavBar>
			
			<!-- SideNav -->
			<m:MaterialSideNav type="PUSH" m:id="sideNav"
				ui:field="sideNav" closeOnClick="true">
		
			</m:MaterialSideNav>
		</header>
		<!-- Main section -->
		<m:MaterialContainer m:id="mainPanel" ui:field="mainPanel"
			width="100%" height="100%">
		</m:MaterialContainer>
	</g:HTMLPanel>
</ui:UiBinder> 
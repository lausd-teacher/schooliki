<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:gwt.material.design.client.ui"
	xmlns:a="urn:import:gwt.material.design.addins.client.sideprofile">
		<ui:style>
			.imgBorder{
				border:1px solid Maroon;
					}
				.userProfileTop{
			display:block;
			position:relative;
			height:65px;
			top:50px;
			font-weight:bold;
		}
		</ui:style>
		<a:MaterialSideProfile ui:field="sideUserProfile" url="../img/safeResponsibleRespectBG.png">
			<g:HTMLPanel addStyleNames="userProfileContainer {style.userProfileTop}"> 
			<m:MaterialRow height="65px">
			<m:MaterialColumn grid="s7" textColor="red darken-2" paddingTop="6">
				<m:MaterialLabel ui:field="firstName" truncate="true" padding="10" marginTop="5" height="1em"/>
					<m:MaterialLabel ui:field="lastName" padding="10" height="1em"/>
			</m:MaterialColumn>
			<m:MaterialColumn grid="s5">
				<m:MaterialImage ui:field="img" type="CIRCLE" addStyleNames="{style.imgBorder}"/>
			</m:MaterialColumn>
			</m:MaterialRow>
			</g:HTMLPanel>
		</a:MaterialSideProfile>
</ui:UiBinder> 
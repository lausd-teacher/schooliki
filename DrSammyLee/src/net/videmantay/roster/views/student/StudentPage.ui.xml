<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:m="urn:import:gwt.material.design.client.ui">
	<g:HTMLPanel>
		<m:MaterialRow>
			<m:MaterialColumn grid="s12 m4 l3">
				<m:MaterialCard ui:field="studentProfPanel">
					<m:MaterialCardContent>
						<m:MaterialIcon ui:field="studentEditIcon"
							hoverable="true" iconType="EDIT" iconPosition="RIGHT" />
						<m:MaterialRow>
							<m:MaterialColumn grid="s12 m12 l12">
								<m:MaterialImage ui:field="stuImage" type="CIRCLE" />
							</m:MaterialColumn>
							<m:MaterialColumn grid="s12 m12 l12">
								<g:HTMLPanel ui:field="studentProfile">
									<span ui:field="firstName" style="float:left;clear:both"></span>
									<span ui:field="lastName" style="float:left;clear:both" />
									<span ui:field="extName" style="float:left;clear:both" />
									<span ui:field="DOB" style="float:left;clear:both" />
									<span ui:field="email" style="float:left;clear:both" />
								</g:HTMLPanel>
							</m:MaterialColumn>
						</m:MaterialRow>
					</m:MaterialCardContent>
				</m:MaterialCard>
			</m:MaterialColumn>
			<m:MaterialColumn grid="s12 m8 l9">
				<!-- Alphabetize the row for easy -->
				<m:MaterialRow ui:field="assignmentRow">

					<m:MaterialCard hoverable="true">
						<m:MaterialCardTitle text="Assignments"
							iconType="ASSIGNMENT" iconPosition="RIGHT"></m:MaterialCardTitle>
						<m:MaterialCardContent></m:MaterialCardContent>
					</m:MaterialCard>

				</m:MaterialRow>
				<m:MaterialRow ui:field="attendanceRow">

					<m:MaterialCard hoverable="true">
						<m:MaterialCardTitle text="Attendance"
							iconType="EVENT" iconPosition="RIGHT">
						</m:MaterialCardTitle>
						<m:MaterialCardContent></m:MaterialCardContent>
					</m:MaterialCard>

				</m:MaterialRow>
				<m:MaterialRow ui:field="goalRow">

					<m:MaterialCard hoverable="true">
						<m:MaterialCardTitle text="Goals" iconType="MOOD"
							iconPosition="RIGHT"></m:MaterialCardTitle>
						<m:MaterialCardContent></m:MaterialCardContent>
					</m:MaterialCard>

				</m:MaterialRow>
				<m:MaterialRow ui:field="groupRow">

					<m:MaterialCard hoverable="true">
						<m:MaterialCardTitle text="Groups" iconType="GROUP"
							iconPosition="RIGHT">
						</m:MaterialCardTitle>
						<m:MaterialCardContent></m:MaterialCardContent>
					</m:MaterialCard>

				</m:MaterialRow>
				<m:MaterialRow ui:field="behaviorRow">

					<m:MaterialCard hoverable="true">
						<m:MaterialCardTitle text="Incident Report"
							iconType="FEEDBACK" iconPosition="RIGHT"></m:MaterialCardTitle>
						<m:MaterialCardContent></m:MaterialCardContent>
					</m:MaterialCard>

				</m:MaterialRow>
				<m:MaterialRow ui:field="jobRow">

					<m:MaterialCard hoverable="true">
						<m:MaterialCardTitle text="Jobs" iconType="BUSINESS_CENTER"
							iconPosition="RIGHT"></m:MaterialCardTitle>
						<m:MaterialCardContent></m:MaterialCardContent>
					</m:MaterialCard>

				</m:MaterialRow>
			</m:MaterialColumn>
		</m:MaterialRow>
	</g:HTMLPanel>
</ui:UiBinder> 
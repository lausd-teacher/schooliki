<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	 xmlns:m="urn:import:gwt.material.design.client.ui"
	xmlns:h="urn:import:gwt.material.design.client.ui.html"
	xmlns:v="urn:import:net.videmantay.roster.views">


	<ui:style>
        .label{
            margin: 24px;
        }
        .profile{
		border:1px solid Crimson;
		padding:2em;
		font-family:Verdana;

	}
    </ui:style>
	<g:HTMLPanel>
		<header>
			<!-- NavBar -->
			<m:MaterialNavBar activates="sideNav" backgroundColor="red darken-4">
				<m:MaterialNavBrand marginLeft="10" centerOn="CENTER_ON_SMALL" text="Dr. Sammy Lee" />
				<m:MaterialNavSection hideOn="HIDE_ON_SMALL_DOWN" float="RIGHT">
					<m:MaterialTooltip ui:field="calendarTooltip" text="Calendar" position="LEFT">
						<m:MaterialLink iconType="EVENT"
							iconPosition="NONE" activates="dropthis"/>
					</m:MaterialTooltip>
					<m:MaterialTooltip ui:field="todoTooltip" text="Todo" position="LEFT">
						<m:MaterialLink iconType="LIST"
							iconPosition="NONE" activates="dp2"/>
					</m:MaterialTooltip>
					<m:MaterialTooltip ui:field="notificationTooltip" text="Notifications" position="LEFT">
						<m:MaterialLink iconType="NOTIFICATIONS"
							iconPosition="NONE" activates="dp3"/>
					</m:MaterialTooltip>
				</m:MaterialNavSection>
			</m:MaterialNavBar>
			<m:MaterialDropDown belowOrigin="true" activator="dropthis">
				<m:MaterialLink text="Long away"/>
				<m:MaterialLink text="Good going"></m:MaterialLink>
			</m:MaterialDropDown>
						<m:MaterialDropDown belowOrigin="true" activator="dp2">
				<m:MaterialLink text="Long away"/>
				<m:MaterialLink text="Good going"></m:MaterialLink>
			</m:MaterialDropDown>
						<m:MaterialDropDown belowOrigin="true" constrainWidth="false" activator="dp3">
				<m:MaterialLink text="Long so what do i see away"/>
				<m:MaterialLink text="Good going"></m:MaterialLink>
			</m:MaterialDropDown>
			<!-- SideNav -->
			<m:MaterialSideNav ui:field="sideNav" m:id="sideNav" type="PUSH" alwaysShowActivator="true" closeOnClick="true">
				<v:UserProfilePanel ui:field="profile"></v:UserProfilePanel>
				<m:MaterialLink ui:field="rosterLink" text="Rosters" textColor="red darken-2" iconType="CLASS" />
				<m:MaterialLink ui:field="calendarLink" text="Calendar" textColor="deep-orange darken-1" iconType="EVENT"/>
				<m:MaterialLink ui:field="logoutLink" text="Logout" textColor="grey darken-2" iconType="INPUT" />
			<!-- extra link for  long list 	<m:MaterialLink /> -->
			</m:MaterialSideNav>
		</header>
		<m:MaterialContainer m:id="mainPanel" ui:field="mainPanel" width="100%" height="100%" >
		</m:MaterialContainer>
	</g:HTMLPanel>
</ui:UiBinder>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:gwt.material.design.client.ui">
	<ui:style>
	
	</ui:style>
	<g:HTMLPanel>
	<m:MaterialModal type="FIXED_FOOTER" ui:field="modal">
			<m:MaterialModalContent>
				<g:HTMLPanel>
					<m:MaterialRow><!-- -->
						<m:MaterialColumn grid="s6">
							<m:MaterialLabel ui:field="studentName" text="Studen name here" />
						</m:MaterialColumn>
						<m:MaterialColumn grid="s6">
							<m:MaterialIcon ui:field="closeIcon" iconType="CLOSE" iconPosition="RIGHT" />
						</m:MaterialColumn>
					</m:MaterialRow>
					<m:html.Hr />
					<m:MaterialTab>
						<m:MaterialTabItem waves="YELLOW" grid="l4">
							<m:MaterialLink text="Superb Decision" href="#taba"
								textColor="WHITE" />
						</m:MaterialTabItem>
						<m:MaterialTabItem waves="YELLOW" grid="l4">
							<m:MaterialLink text="Poor Judgement" href="#tabb"
								textColor="WHITE" />
						</m:MaterialTabItem>
					</m:MaterialTab>
					<m:MaterialPanel m:id="taba" ui:field="posIncidents">
						
					</m:MaterialPanel>
					<m:MaterialPanel m:id="tabb" ui:field="negIncidents">
						
					</m:MaterialPanel>
				</g:HTMLPanel>
			</m:MaterialModalContent>
			<m:MaterialModalFooter>
				<m:MaterialRow marginBottom="0" paddingLeft="50">
					<m:MaterialColumn grid="s2 m2 l2">
						<!-- Quick Assignment (All) -->
						<m:MaterialAnchorButton type="FLAT"
							textColor="orange darken-4" iconType="ASSIGNMENT" ui:field="assignmentQuickLink"></m:MaterialAnchorButton>
					</m:MaterialColumn>
					<m:MaterialColumn grid="s2 m2 l2">
						<!-- Quick Goal (All) -->
						<m:MaterialAnchorButton type="FLAT"
							textColor="amber darken-4" iconType="MOOD" ui:field="goalQuickLink"></m:MaterialAnchorButton>
					</m:MaterialColumn>
					<m:MaterialColumn grid="s2 m2 l2">
						<!-- Quick Form (single/multi??) -->
						<m:MaterialAnchorButton type="FLAT"
							textColor="deep-orange darken-4" iconType="INBOX" ui:field="formQuickLink"></m:MaterialAnchorButton>
					</m:MaterialColumn>
					<m:MaterialColumn grid="s2 m2 l2">
						<!-- Quick Book (single/multi???) -->
						<m:MaterialAnchorButton type="FLAT"
							textColor="red darken-4" iconType="LOCAL_LIBRARY" ui:field="bookQuickLink"></m:MaterialAnchorButton>
					</m:MaterialColumn>
					<m:MaterialColumn grid="s2 m2 l2">
						<!-- Teacher's Note (This only for single) -->
						<m:MaterialAnchorButton type="FLAT"
							textColor="deep-orange darken-2" iconType="NOTE" ui:field="noteQuickLink" />
					</m:MaterialColumn>
					<m:MaterialColumn grid="s2 m2 l2">
						<!-- Show More (This only for single) -->
						<m:MaterialAnchorButton type="FLAT"
							textColor="red darken-2" text="CANCEL" ui:field="cancelStudentActionBtn"></m:MaterialAnchorButton>
					</m:MaterialColumn>
				</m:MaterialRow>
			</m:MaterialModalFooter>
		</m:MaterialModal>
	</g:HTMLPanel>
</ui:UiBinder> 
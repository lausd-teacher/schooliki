<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:gwt.material.design.client.ui"
	xmlns:ma="urn:import:gwt.material.design.addins.client">
	
	<m:MaterialCard height="100%" ui:field="routineFormCard">
	<m:MaterialCardContent>
	<g:HTMLPanel>
	<m:MaterialTab >
		 <m:MaterialTabItem ><m:MaterialAnchorButton type="FLAT" href="#info-routineTab" text="Info" iconType="INFO"/></m:MaterialTabItem>
		<m:MaterialTabItem ><m:MaterialAnchorButton type="FLAT" href="#procedures-routineTab" text="Procedures" iconType="LIST"/></m:MaterialTabItem>
		<m:MaterialTabItem ><m:MaterialAnchorButton type="FLAT" href="#groups-routineTab" text="Groups" iconType="GROUP_WORK"/></m:MaterialTabItem>
		<m:MaterialTabItem hideOn="HIDE_ON_MED_DOWN"><m:MaterialAnchorButton type="FLAT" href="#routines-routineTab" text="Stations" iconType="WIDGETS"/> </m:MaterialTabItem>
		<!--  <m:MaterialTabItem><m:MaterialAnchorButton type="FLAT" href="#seating-routineTab" text="Seating Chart" /> </m:MaterialTabItem>-->
	</m:MaterialTab>
		<m:MaterialPanel m:id="info-routineTab" >
			<m:MaterialTextBox ui:field="title" placeholder="Title" />
			<m:MaterialTextArea ui:field="description" placeholder="description" />
			<m:MaterialCheckBox  ui:field="isDefault" text="Default" />
		</m:MaterialPanel>
		<m:MaterialPanel m:id="procedures-routineTab">
		<g:HTMLPanel ui:field="procedureListPanel">
		<m:MaterialCard>
			<m:MaterialCardAction>
				<m:MaterialBadge ui:field="procedureNumBadge" />
				<m:MaterialAnchorButton ui:field="deleteProcBtn" />
				<m:MaterialAnchorButton ui:field="doneProcBtn" />
			</m:MaterialCardAction>
			<m:MaterialCardContent>
				<ma:richeditor.MaterialRichEditor placeholder="you can type procedure content here"></ma:richeditor.MaterialRichEditor>
			</m:MaterialCardContent>
		</m:MaterialCard>
		</g:HTMLPanel>
		</m:MaterialPanel>
		<m:MaterialPanel m:id="groups-routineTab" ></m:MaterialPanel>
		<m:MaterialPanel m:id="stations-routineTab"></m:MaterialPanel>
		<m:MaterialPanel m:id="seatingChart-routineTab" hideOn="HIDE_ON_MED_DOWN">
		
		</m:MaterialPanel>
	</g:HTMLPanel>
		</m:MaterialCardContent>
		<m:MaterialCardAction>
	  <m:MaterialRow>
	   <m:MaterialColumn>
		<m:MaterialButton ui:field="submitBtn" text="Submit" /> 
		</m:MaterialColumn>
		<m:MaterialColumn>
		<m:MaterialButton ui:field="cancelBtn" text="Cancel" />
		</m:MaterialColumn>
	</m:MaterialRow>
	</m:MaterialCardAction>
	</m:MaterialCard>
</ui:UiBinder> 
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:m="urn:import:gwt.material.design.client.ui"
	xmlns:h="urn:import:gwt.material.design.client.ui.html" xmlns:o="urn:import:gwt.material.design.addins.client.overlay"
	xmlns:v="urn:import:net.videmantay.roster.views.routine">
	<ui:style>
	.scStudentTools {
		overflow-x: hidden;
		height: 100%;
		width: 11em;
		position: relative;
		left: -2.25em;
	}
	
	.scStudentList {
		overflow-y: scroll;
		height: 75%;
		width:100%;
	}
	
	.seatingChart {
		width: 1090px;
		height: 650px;
		display: block;
		position: relative;
		margin-left: auto;
		margin-right: auto;
		margin-bottom: 1em;
	}
	
	.floorPlan {
		height: 650px;
		background-image: url('../img/classFloor.svg');
		border-radius: 5%;
		border: 0.1em dotted Brown;
		position: relative;
		left:-0.75em;
		margin-bottom:1em;
	}
	
	.seatingChartToolbar {
		display: none;
		position: relative;
	}
	
	.editTools {
		display: none;
		position: relative;
	}
	</ui:style>
	<g:HTMLPanel ui:field="seatingChart" styleName="{style.seatingChart}">
		<m:MaterialRow ui:field="seatingChartToolbar"
			backgroundColor="red lighten-1" addStyleNames="{style.seatingChartToolbar}">
			<m:MaterialColumn grid="s2">
				<m:MaterialButton text="Furniture" ui:field="stateSelectBtn" activates="scStateSelect" 
				iconType="EVENT_SEAT"  iconPosition="RIGHT" width="170px"/>
				<m:MaterialDropDown ui:field="scDropDown" activator="scStateSelect">
					<m:MaterialLink text="Students" iconType="SCHOOL" iconPosition="RIGHT"/>
					<m:MaterialLink text="Groups" iconType="GROUP_WORK" iconPosition="RIGHT"/>
					<m:MaterialLink text="Furniture" iconType="EVENT_SEAT"  iconPosition="RIGHT"/>
					<m:MaterialLink text="Stations" iconType="WIDGETS" iconPosition="RIGHT"/>
				</m:MaterialDropDown>
				</m:MaterialColumn>
					<m:MaterialColumn grid="s1">
						<m:MaterialAnchorButton ui:field="colorPicker" />
					</m:MaterialColumn>
					<m:MaterialColumn grid="s1">
						<m:MaterialAnchorButton ui:field="undoBtn" iconType="REPLY"/>
					</m:MaterialColumn>
					<m:MaterialColumn grid="s1">
						<m:MaterialAnchorButton ui:field="deleteBtn" iconType="DELETE"/>
					</m:MaterialColumn>
				<!-- This cancel button must be accessible to classroomdashboard -->
				<m:MaterialColumn grid="s1">
				<m:MaterialAnchorButton ui:field="cancelBtn" iconType="CLOSE"/>
				</m:MaterialColumn>
			<m:MaterialColumn grid="s1">
				<!-- This done button must be accessible to classroomdashboard -->
				<m:MaterialAnchorButton ui:field="doneBtn"
					iconType="DONE" />
			</m:MaterialColumn>
		</m:MaterialRow>
		<m:MaterialRow>
			<m:MaterialColumn grid="l10">
				<h:Div ui:field="floorPlan" addStyleNames="{style.floorPlan}"></h:Div>
			</m:MaterialColumn>
			<m:MaterialColumn grid="l2">
				<g:HTMLPanel addStyleNames="{style.scStudentTools}">
					<div ui:field="homeTools">
						<m:MaterialLabel text="Students" textColor="red darken-2" />
						<m:MaterialCollection ui:field="studentList"
							addStyleNames="scStudentList" />
					</div>
					<div ui:field="editTools" class="{style.editTools}">
							<m:MaterialCollapsible ui:field="editCollapsible">
								<m:MaterialCollapsibleItem m:id="studentCollapseItem" addStyleNames="editCollapseItem" ui:field="studentCollapseItem">
									<m:MaterialCollapsibleHeader>
										<m:MaterialLink  iconType="SCHOOL" />
									</m:MaterialCollapsibleHeader>
									<m:MaterialCollapsibleBody>
										<g:HTMLPanel>
											<h5>No Students to show</h5>
										</g:HTMLPanel>
										<m:MaterialCollection ui:field="editStudentList"></m:MaterialCollection>
									</m:MaterialCollapsibleBody>
								</m:MaterialCollapsibleItem>
								<m:MaterialCollapsibleItem m:id="groupCollapseItem" addStyleNames="editCollapseItem" ui:field="groupCollapseItem"> 
									<m:MaterialCollapsibleHeader> 
										<m:MaterialLink iconType="GROUP_WORK" />
									</m:MaterialCollapsibleHeader>
									<m:MaterialCollapsibleBody> 
										<g:HTMLPanel>
											<h5>No groups created </h5>
										</g:HTMLPanel>
									</m:MaterialCollapsibleBody>
								</m:MaterialCollapsibleItem>
								<m:MaterialCollapsibleItem m:id="furnitureCollapseItem" addStyleNames="editCollapseItem" ui:field="furnitureCollapseItem">
									<m:MaterialCollapsibleHeader>
										<m:MaterialLink iconType="EVENT_SEAT"/>
									</m:MaterialCollapsibleHeader>
									<m:MaterialCollapsibleBody>
										<m:MaterialCollection>
											<m:MaterialCollectionItem>
												<m:MaterialImage url="../img/doubleDesk.png" />
											</m:MaterialCollectionItem>
											<m:MaterialCollectionItem>
												<m:MaterialImage url="../img/singleDesk.png" />
											</m:MaterialCollectionItem>
										</m:MaterialCollection>
									</m:MaterialCollapsibleBody>
								</m:MaterialCollapsibleItem>
								<m:MaterialCollapsibleItem m:id="stationCollapseItem" addStyleNames="editCollapseItem" ui:field="stationCollapseItem">
									<m:MaterialCollapsibleHeader>
										<m:MaterialLink iconType="WIDGETS"/>
									</m:MaterialCollapsibleHeader>
									<m:MaterialCollapsibleBody>
										<g:HTMLPanel>
											<h5>No stations created</h5>
										</g:HTMLPanel>
										<m:MaterialCollection></m:MaterialCollection>
									</m:MaterialCollapsibleBody>
								</m:MaterialCollapsibleItem>
							</m:MaterialCollapsible>
					</div>
				</g:HTMLPanel>
			</m:MaterialColumn>
		</m:MaterialRow>
		<m:MaterialFAB>
			<m:MaterialAnchorButton iconType="ADD" type="FLOATING"
				ui:field="addStudent" />
		</m:MaterialFAB>
	</g:HTMLPanel>
</ui:UiBinder> 
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:gwt.material.design.client.ui"
	xmlns:v="urn:import:net.videmantay.roster.views.routine">
	<ui:style>
		.smoke{background-color:WhiteSmoke;}
	</ui:style>
	<g:HTMLPanel addStyleNames="{style.smoke}">
	<div ui:field="routineList">
	<m:MaterialPanel textColor="grey" textAlign="LEFT" marginLeft="30.5">
	<m:MaterialTitle title="Routines" description=" Carpet Time, Gallery Walks, IWT manage all routine items here , including procedures,groups, seating, and stations"  />
	</m:MaterialPanel>
	<m:MaterialRow ui:field="routineGrid" paddingRight="10" paddingLeft="10"></m:MaterialRow>
	<m:MaterialFAB>
		<m:MaterialAnchorButton ui:field="createBtn" type="FLOATING" size="LARGE" iconType="ADD" backgroundColor="yellow darken-4"/>
	</m:MaterialFAB>
	</div>
	<div ui:field="routineFormWrapper" style="display:none"> 
		<v:RoutineForm ui:field="routineForm"></v:RoutineForm>
	</div>
	<m:MaterialModal ui:field="routineDeleteModal"> 
		<m:MaterialModalContent> 
			<m:MaterialTitle title="Delete Routune" description="Are you sure you want to delete this routine?" />
		</m:MaterialModalContent>
		<m:MaterialModalFooter> 
			<m:MaterialAnchorButton ui:field="routineDeleteOkBtn" text="OK" float="LEFT"></m:MaterialAnchorButton>
			<m:MaterialAnchorButton ui:field="routineDeleteCancelBtn" text="Cancel" float="RIGHT" ></m:MaterialAnchorButton>
		</m:MaterialModalFooter>
	</m:MaterialModal>
	</g:HTMLPanel>
</ui:UiBinder> 
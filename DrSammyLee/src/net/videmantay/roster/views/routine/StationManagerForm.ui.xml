<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:m="urn:import:gwt.material.design.client.ui"
	xmlns:ma="urn:import:gwt.material.design.addins.client">
	<ui:style>
		.stamanPanel{
		position:absolute;
		}

		.stamanStationIcon{
		position:absolute;
		right:-1em;
		top:50%;
		}
		.stamanGroupIcon{
		position:absolute;
		bottom: -1em;
		margin-left:auto;
		margin-right:auto;
		}
	</ui:style>
	<g:HTMLPanel>
		<m:MaterialRow>
			<m:MaterialColumn ui:field="stationCol">
				<m:MaterialPanel>
					<m:MaterialRow ui:field="stationEditingRow">
						<m:MaterialColumn ui:field="stationCreateBtn"
							addStyleNames="{style.stamanStationIcon}">
							<m:MaterialPanel addStyleName="{style.stamanPanel}">
								<m:MaterialTextBox />
								<m:MaterialTextArea />
								<m:MaterialAnchorButton type="FLOATING"
									iconType="WIDGETS" />
							</m:MaterialPanel>
							<m:MaterialCollection ui:field="stationGroupCollection">
								<m:MaterialCollectionItem>
									<m:MaterialPanel addStyleNames="{style.stamanPanel}">
										<m:MaterialCheckBox ui:field="customCheckBox" />
										<ma:autocompelete.MaterialAutoComplete />
										<m:MaterialAnchorButton ui:field="groupCreateBtn"
											iconType="GROUP" addStyleNames="{style.stamanGroupIcon}"
											iconSize="TINY" />
									</m:MaterialPanel>
								</m:MaterialCollectionItem>
							</m:MaterialCollection>
						</m:MaterialColumn>
					</m:MaterialRow>
				</m:MaterialPanel>
			</m:MaterialColumn>
			<m:MaterialColumn ui:field="timeCol"></m:MaterialColumn>
		</m:MaterialRow>
	</g:HTMLPanel>
</ui:UiBinder> 
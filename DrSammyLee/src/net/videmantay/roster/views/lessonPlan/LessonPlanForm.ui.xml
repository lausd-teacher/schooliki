<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:gwt.material.design.client.ui"
	xmlns:h="urn:import:gwt.material.design.client.ui.html">
	<ui:style>
	
	</ui:style>
	<g:FormPanel>
		<g:HTMLPanel>
			<m:MaterialCard ui:field="lessonCard">
				<m:MaterialCardContent>
				<m:MaterialAnchorButton ui:field="titleLabel" text="Untitled" />
				<m:MaterialTextBox ui:field="titleTextBox" />
				<h:Hr />
				<m:MaterialRow> 
						<m:MaterialColumn> 
							<m:MaterialAnchorButton />
						</m:MaterialColumn>
						<m:MaterialColumn> 
							<m:MaterialAnchorButton />
						</m:MaterialColumn>
						<m:MaterialColumn> 
							<m:MaterialAnchorButton />
						</m:MaterialColumn>
					</m:MaterialRow>
					<!-- dropdown with preloaded subjects , math ,english, etc -->
					<m:MaterialDropDown ui:field="subjectDropdown"></m:MaterialDropDown>
					<!--  hidden textbox activated when they want to add a subject -->
					<m:MaterialTextBox></m:MaterialTextBox>
					<h:Hr></h:Hr>/>
					<m:MaterialLabel text="description" />
					<m:MaterialTextArea ui:field="description"></m:MaterialTextArea>
					<m:MaterialLabel text="date" />
					<m:MaterialDatePicker ui:field="datePicker" />
					<m:MaterialLabel text="duration" />
					<m:MaterialInput ui:field="duration"/>
					<m:MaterialLabel text="Link this lesson to an online resource" />
					<m:MaterialButton ui:field="attachement" iconType="ATTACHMENT"/>
				</m:MaterialCardContent>
			</m:MaterialCard>
		</g:HTMLPanel>
	</g:FormPanel>
</ui:UiBinder> 
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:gwt.material.design.client.ui"
	xmlns:w="urn:import:com.google.gwt.user.cellview.client">
	<ui:style>
		.addedStudents{
		border-radius:10%;
		border:1px solid Silver;
		overflow-y:auto;
		padding:1.5em;
		margin-left:2em;
		height:350px;
		
	}
	
	</ui:style>
	<m:MaterialCard height="90%">
	<m:MaterialCardContent>
	<m:MaterialTab>
		<m:MaterialTabItem  ui:field="studentFormTab">
			<m:MaterialLink text="Students" href="#classroomForm"/>
		</m:MaterialTabItem>
		<m:MaterialTabItem ui:field="joinRequestTab"  textColor="grey" >
			<m:MaterialBadge ui:field="joinRequestBadge" marginTop="12" backgroundColor="red darken-3" circle="true" text="25"/>
			<m:MaterialLink text="Join Requests"  href="#joinRequestGrid"/>
		</m:MaterialTabItem>
	</m:MaterialTab>
	<m:MaterialPanel m:id="classroomForm" marginTop="10" marginBottom="10" paddingTop="10">
	<g:FormPanel>
		<g:HTMLPanel>
		<m:MaterialRow>
		<m:MaterialColumn grid="s12 m5 l5" >
			<m:MaterialTextBox ui:field="joinRequestSearchInput" placeholder="Search students" iconType="SEARCH"></m:MaterialTextBox>
		<g:AbsolutePanel ui:field="jrResultPanelWrapper" >
			<w:CellList ui:field="joinRequestResultsPanel" />
		</g:AbsolutePanel>
		</m:MaterialColumn>
		<m:MaterialColumn grid="s12 m5 l5" padding="1">
		<m:MaterialLabel text="Add Students" />
			<m:MaterialPanel ui:field="joinRequestCreatedPanel" backgroundColor="grey lighten-5" addStyleNames="{style.addedStudents}"/>
		</m:MaterialColumn>
		</m:MaterialRow>
		</g:HTMLPanel>
	</g:FormPanel>
	</m:MaterialPanel>
	<m:MaterialPanel m:id="joinRequestGrid"> 
	<!-- put data grid here -->
	<m:MaterialCollection ui:field="joinRequestCollection"></m:MaterialCollection>
	<g:HTMLPanel ui:field="emptyJoinRequest"> 
		<h3 color="DimGray"> You have not received any new requests yet.</h3>
	</g:HTMLPanel>
	</m:MaterialPanel>
	</m:MaterialCardContent>
	<m:MaterialCardAction>
	<m:MaterialRow>
				<m:MaterialColumn>
					<m:MaterialAnchorButton ui:field="submitBtn"
						text="Submit" backgroundColor="green" waves="LIGHT" />
				</m:MaterialColumn>
				<m:MaterialColumn>
					<m:MaterialAnchorButton ui:field="cancelBtn"
						text="Cancel" backgroundColor="red" waves="LIGHT" />
				</m:MaterialColumn>
			</m:MaterialRow>
	</m:MaterialCardAction>
	</m:MaterialCard>
</ui:UiBinder> 
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:gwt.material.design.client.ui"
	xmlns:v="urn:import:net.videmantay.roster.incident">
	<m:MaterialModal ui:field="modal" width="70%" height="100%">
	<m:MaterialModalContent >
	<g:FormPanel ui:field="form">
	<g:HTMLPanel>
		<m:MaterialInput ui:field="iconUrl" type="TEXT" visible="false" />
		<m:MaterialPanel ui:field="iconPanel"  m:id="iconFormIconPanel" waves="LIGHT" marginLeft="100" backgroundColor="blue-grey lighten-3"/>
		<m:html.Div>
		<v:IncidentIconGrid  ui:field="iconGrid" visible="false"/>
		</m:html.Div>
		<m:MaterialLabel text="Type:" fontSize="1.5em"/>
		<m:MaterialListBox ui:field="typeListBox" fontSize="1.5em" ></m:MaterialListBox>
		<m:MaterialLabel ui:field="nameLabel" text="Name:" fontSize="1.5em" />
		<m:MaterialTextBox ui:field="nameInput" fontSize="1.5em"/>
		<m:MaterialLabel ui:field="valueLabel" text="Points: (values under zero are considered 'Poor Judgement')" fontSize="1.5em" />
		<m:MaterialNumberBox ui:field="valueInput" width="50px" iconFontSize="1.5em"/>
	</g:HTMLPanel>
	</g:FormPanel>
	</m:MaterialModalContent>
	<m:MaterialModalFooter>
		<m:MaterialRow ui:field="doneCancelRow">
			<m:MaterialColumn grid="s6 m6 l6">
				<m:MaterialAnchorButton type="RAISED" backgroundColor="deep-orange" ui:field="doneBtn" textColor="white" text="Done" iconType="DONE" />
			</m:MaterialColumn>
			<m:MaterialColumn grid="s6 m6 l6">
				<m:MaterialAnchorButton type="RAISED" backgroundColor="red darken-2"  textColor="white" text="Cancel" ui:field="cancelBtn"  iconType="CANCEL" />
			</m:MaterialColumn>
		</m:MaterialRow>
	</m:MaterialModalFooter>
	</m:MaterialModal>
</ui:UiBinder> 
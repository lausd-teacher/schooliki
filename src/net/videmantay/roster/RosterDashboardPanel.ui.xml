<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:gwt.material.design.client.ui"
	xmlns:h="urn:import:gwt.material.design.client.ui.html"
	xmlns:v="urn:import:net.videmantay.roster"
	xmlns:xlink="http://www.w3.org/1999/xlink">
	<g:HTMLPanel height="100%" width="100%">
		<m:MaterialTab ui:field="tab" textColor="red" indicatorColor="red accent-4" height="2.5em" >
			<m:MaterialTabItem addStyleNames="myTab"><m:MaterialAnchorButton type="FLAT" href="#tab1" text="Dashboard"  waves="RED"/></m:MaterialTabItem>
			<m:MaterialTabItem addStyleNames="myTab" ui:field="calTab"><m:MaterialAnchorButton type="FLAT" href=".tab2" text="Calendar"  waves="RED"/></m:MaterialTabItem>
			<m:MaterialTabItem addStyleNames="myTab"><m:MaterialAnchorButton type="FLAT" href="#tab3" text="Reports"  waves="RED"/></m:MaterialTabItem>
		</m:MaterialTab>
		<div  id="tab1">
			<m:MaterialAnchorButton ui:field="classroomtimeBar" backgroundColor="red darken-4" centerOn="CENTER_ON_SMALL" grid="s12" width="100%" hideOn="HIDE_ON_MED_UP" addStyleNames="classTimeBar" text="Class Time" fontSize="1.10em" textAlign="CENTER" iconType="ARROW_DROP_DOWN" iconSize="MEDIUM" iconPosition="RIGHT" activates="classtimedrop"></m:MaterialAnchorButton>
			<m:MaterialDropDown activator="classtimedrop" ui:field="classtimeDrop2">
					<m:MaterialLink  addStyleNames="manageClassTimeLink" text="Manage..." />
				</m:MaterialDropDown>
			<m:MaterialRow ui:field="toolbar" height="3em" backgroundColor="yellow darken-1" textColor="red darken-3" paddingLeft="10" centerOn="CENTER_ON_SMALL">
				<m:MaterialAnchorButton ui:field="classtimeBtn" hideOn="HIDE_ON_SMALL" addStyleNames="classTimeBtn" float="RIGHT" text="Class Time" fontSize="1.10em"  marginRight="5.0" textAlign="CENTER" backgroundColor="red darken-3" iconType="ARROW_DROP_DOWN" iconSize="MEDIUM" iconPosition="RIGHT" activates="classtime"/>
				<m:MaterialDropDown activator="classtime" ui:field="classtimeDrop">
					<m:MaterialLink addStyleNames="manageClassTimeLink" text="Manage..." />
				</m:MaterialDropDown>
			<m:MaterialColumn  grid="l3" hideOn="HIDE_ON_MED_DOWN" float="LEFT" centerOn="CENTER_ON_SMALL">
				<m:MaterialRow>
					<m:MaterialColumn grid="l1">
					<m:MaterialLabel text="Grid" paddingRight="3.0"/>
					</m:MaterialColumn>
					<m:MaterialColumn grid="l3">
					<m:MaterialSwitch ui:field="gridSwitch"></m:MaterialSwitch>
					</m:MaterialColumn>
					<m:MaterialColumn grid="l3">
					<m:MaterialLabel text="Seating Chart" paddingLeft="7.5" />
					</m:MaterialColumn>
					<m:MaterialColumn>
						<m:MaterialIcon ui:field="seatingChartEditIcon" iconType="EDIT" activates="seatingChartEdit" marginLeft="5.5"/>
						<m:MaterialDropDown activator="seatingChartEdit">
							<m:MaterialLink ui:field="arrangeStudentsLink" text="Arrange Students" />
							<m:MaterialLink ui:field="manageFurnitureLink" text="Manage Furntirue"/>
							<m:MaterialLink ui:field="manageStationsLink" text="Manage Stations" />
							<m:MaterialLink ui:field="manageGroupsLink" text="Manage Groups" />
							<m:MaterialLink ui:field="manageSeatingChart" text="Manage Chart" activates="manageSeating"/>
								<m:MaterialDropDown activator="manageSeating">
									<m:MaterialLink ui:field="newLink" text="New" />
									<m:MaterialLink ui:field="copyLink" text="Copy" />
									<m:MaterialLink ui:field="deleteLink" text="Delete" />
								</m:MaterialDropDown>
							
						</m:MaterialDropDown>
					</m:MaterialColumn>
				</m:MaterialRow>
				</m:MaterialColumn>
			<m:MaterialColumn grid="s12 m6 l6">
				<m:MaterialColumn grid="s2 m2 l2">
					<m:MaterialPanel paddingTop="12">
					<m:MaterialLabel text="Check: " />
					</m:MaterialPanel>
				</m:MaterialColumn>
				<m:MaterialColumn grid="s1 m1 l1">
					<m:MaterialPanel  paddingTop="12">
						<g:HTMLPanel>
							<m:MaterialTooltip  text="Roll">
							<m:MaterialIcon  ui:field="rollIcon" iconType="ASSIGNMENT_IND" iconSize="SMALL"/>
							</m:MaterialTooltip>
						</g:HTMLPanel>
					</m:MaterialPanel>
				</m:MaterialColumn>
				<m:MaterialColumn grid="s1 m1 l1">
				<m:MaterialPanel  paddingTop="12" > 
						<g:HTMLPanel> 
						<m:MaterialTooltip text="Homework">
							<m:MaterialIcon ui:field="hwIcon" iconType="ASSIGNMENT" iconSize="SMALL"/>
							</m:MaterialTooltip>
						</g:HTMLPanel>
				</m:MaterialPanel>
				</m:MaterialColumn >
				<m:MaterialColumn grid="s1 m1 l1">
					<m:MaterialPanel  paddingTop="12">
						<g:HTMLPanel> 
						<m:MaterialTooltip text="Groups">
							<m:MaterialIcon  ui:field="groupsIcon" iconType="GROUP_WORK" iconSize="SMALL"/>
						</m:MaterialTooltip>	
						</g:HTMLPanel>
					</m:MaterialPanel>
				</m:MaterialColumn>
				<!--This starts selects tools -->
				<m:MaterialColumn grid="s2 m2 l2">
					<m:MaterialPanel paddingTop="12" marginLeft="10">
						<m:MaterialLabel text="Select: " textColor="deep-orange darken-3"/>
					</m:MaterialPanel>
				</m:MaterialColumn>
				<m:MaterialColumn grid="s1 m1 l1" marginRight="10">
					<m:MaterialPanel paddingTop="12">
						<g:HTMLPanel>
						<m:MaterialTooltip text="Multiple">
							<m:MaterialIcon ui:field="multipleIcon" iconType="GROUP_ADD" iconSize="SMALL" textColor="deep-orange darken-3"/>
							</m:MaterialTooltip>
						</g:HTMLPanel>
					</m:MaterialPanel>
				</m:MaterialColumn>
				<m:MaterialColumn grid="s1 m1 l1" marginRight="10">
					<m:MaterialPanel paddingTop="12" >
						<g:HTMLPanel> 
						<m:MaterialTooltip text="Random">
							<m:MaterialIcon ui:field="randomIcon" iconType="SHUFFLE" iconSize="SMALL" textColor="deep-orange darken-3"/>
						</m:MaterialTooltip>
						</g:HTMLPanel>
					</m:MaterialPanel>
			</m:MaterialColumn>
				<m:MaterialColumn grid="s1 m1 l1">
					<m:MaterialPanel paddingTop="12">
						<g:HTMLPanel>
						<m:MaterialTooltip text="Select All">
							<m:MaterialIcon ui:field="selectAllIcon" iconType="SELECT_ALL" iconSize="SMALL" textColor="deep-orange darken-3"/>
							</m:MaterialTooltip>
						</g:HTMLPanel>
					</m:MaterialPanel>
				</m:MaterialColumn>
				</m:MaterialColumn>
			</m:MaterialRow>
			<m:MaterialRow ui:field="doneToolbar" backgroundColor="deep-orange darken-3" > 
			<m:MaterialColumn hideOn="HIDE_ON_SMALL" ui:field="fullDoneToolbar" grid="s12 m12 l12">
				<m:MaterialColumn grid="m3">
					<m:MaterialAnchorButton  ui:field="doneBtn" text="DONE" iconType="DONE" backgroundColor="amber darken-4"></m:MaterialAnchorButton>
				</m:MaterialColumn>
				<m:MaterialColumn grid="m3">
					<m:MaterialButton  ui:field="undoBtn" text="Undo" iconType="UNDO" backgroundColor="orange darken-4" />
				</m:MaterialColumn>
				<m:MaterialColumn grid="m3">
					<m:MaterialAnchorButton ui:field="doneBarCancelBtn" text="CANCEL" iconType="CLEAR" backgroundColor="red darken-1"></m:MaterialAnchorButton>
				</m:MaterialColumn>
				<m:MaterialColumn grid="m3">
					<m:MaterialButton  type="FLAT" textColor="white" text="Mangage" iconType="MORE_VERT" iconPosition="RIGHT"/>
				</m:MaterialColumn>
			</m:MaterialColumn>
			<m:MaterialColumn ui:field="smDoneToolbar" hideOn="HIDE_ON_MED_UP">
				<m:MaterialColumn grid="s3">
					<m:MaterialButton ui:field="smDoneBtn"  iconType="DONE" backgroundColor="amber darken-2"></m:MaterialButton>
				</m:MaterialColumn>
				<m:MaterialColumn grid="s3">
					<m:MaterialButton ui:field="smUndoBtn" iconType="UNDO" backgroundColor="orange darken-4"/>
				</m:MaterialColumn>
				<m:MaterialColumn grid="s3">
					<m:MaterialButton ui:field="smDoneBarCancelBtn" iconType="CLEAR" backgroundColor="red darken-2"></m:MaterialButton>
				</m:MaterialColumn>
				<m:MaterialColumn grid="s3">
					<m:MaterialButton type="FLAT"  iconType="MORE_VERT" textColor="white"/>
				</m:MaterialColumn>
			</m:MaterialColumn>
			</m:MaterialRow>
			<g:HTMLPanel ui:field="tab1Main">
			</g:HTMLPanel>
		</div>
		<g:HTMLPanel  ui:field="tab2">
			  <g:Frame ui:field="calFrame" url="../cal.html" width="100%"   addStyleNames="calFrame" visible="false" /> 
			<br/>
			<m:MaterialFAB ui:field="classEventFAB" visible="false"><m:MaterialAnchorButton  ui:field="classEventAddBtn" type="FLOATING" iconType="ADD" size="LARGE"/></m:MaterialFAB>
		</g:HTMLPanel>
		<m:MaterialPanel  m:id="tab3" ui:field="tab3" >
			<v:ClassReportPanel width="100%" height="100%" />
		</m:MaterialPanel>
	</g:HTMLPanel>
</ui:UiBinder> 